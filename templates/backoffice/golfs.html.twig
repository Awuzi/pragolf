{% extends 'root.html.twig' %}

{% block title %}Gestion Golfs{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gestions des Golfs</h1>
        <div class="m-2">
            <a href="{{ path('add_golf') }}" class="btn btn-sm btn-primary">Ajouter un Golf</a>
        </div>
        <table class="table table-striped table-middle-aligned">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Lieu</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for golf in golfs %}
                <tr>
                    <td>{{ golf.nom }}</td>
                    <td>{{ golf.lieu }}</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>


    </div>




{% endblock %}
