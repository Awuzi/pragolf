<p>{{ info_compet.nomCompet }}, le {{ info_compet.date }} -- {{ parties|length }} parties. Heure Départ {{ info_compet.heureDepart }}h{{ info_compet.minuteDepart }}</p>
{% set h = info_compet.heureDepart %}
{% set m = info_compet.minuteDepart %}
{% set cadence = info_compet.cadence %}
<style>
    table {
        border: 1px solid black;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
        padding: 0;
    }

    td {
        padding: 0;
        font-size: 9px;
        border: 1px solid black;
        border-collapse: collapse;
    }

    .thead {
        font-size: 9px;
        background-color: #136DFF;
        width: 4.2%;
    }
</style>
<table class="table">
    <tr style="background-color: yellow;">
        <th class="thead">
            n°
        </th>
        <th class="thead">
            Départ
        </th>
        <th class="thead">
            Joueurs
        </th>
        <th class="thead">
            Couleur
        </th>
        {% for j in range(1,18) %}
            <th class="thead">
                {{ j }}
            </th>
        {% endfor %}
    </tr>
    {% for partie in parties %}
        <tr>
            <td>
                #
            </td>
            <td>
                {{ h }}:{{ m }}
            </td>

            <td>
                {% for joueur in partie[1] %}
                    {{ joueur }}<br>
                {% endfor %}
            </td>

            <td>
                {{ partie[0] }}
            </td>
            {% set min = m %}
            {% set heur = h %}
            {% for i in range(0, 17) %}
                {% set min = trous[i] + min %}
                {% if (min > 59) %}
                    {% set heur = heur + 1 %}
                    {% set min = min - 60 %}
                    {% if (min < 10) %}
                        {% set min = '0' ~ min %}
                    {% endif %}
                {% endif %}
                <td>
                    {{ heur }}:{{ min }}
                </td>
            {% endfor %}

        </tr>
        {% set m = m + cadence %}
        {% if (m > 59) %}
            {% set h = h + 1 %}
            {% set m = m - 60 %}
            {% if (m < 10) %}
                {% set m = '0' ~ m %}
            {% endif %}
        {% endif %}
    {% endfor %}
    <br>
</table>
