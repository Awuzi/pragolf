{% extends 'root.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid col-md-4">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="row">

                <div class="col">
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                </div>

                <div class="col">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
            </div>

            <button class="btn btn-primary mt-3" type="submit">Connexion</button>


        </form>
    </div>

{% endblock %}
